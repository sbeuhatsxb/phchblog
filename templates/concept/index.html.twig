{% extends 'base.html.twig' %}

{% block title %}Concept index{% endblock %}

{% block body %}
    <h1>Concept index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for concept in concepts %}
            <tr>
                <td>{{ concept.id }}</td>
                <td>{{ concept.name }}</td>
                <td>
                    <a href="{{ path('special_list', {'id': .concept.id}, {'class': .concept }) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

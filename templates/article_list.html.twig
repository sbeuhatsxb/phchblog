{% extends 'base.html.twig' %}

{% block title %} Homepage {% endblock %}

{% block body %}

    <div class="container">
        {% if shortname != null %}
            <div class="row">
                {% if shortname == 'Concept' %}
                    <p>Liste des articles en rapport avec le concept de {{ filter }} :</p>
                {% elseif shortname == 'Author' %}
                    <p>Liste des articles en rapport avec {{ filter|capitalize }} :</p>
                {% elseif shortname == 'Category' %}
                    <p>Liste des articles en rapport avec la cat√©gorie : {{ filter }} </p>
                {% endif %}
            </div>
        {% endif %}
        <div class="row">
            {% for article in articles %}
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                    <a href="{{ path('article_show', {'id': article.id}) }}">
                        <div data-mh="my-group" class="card" style="width: 23rem;">
                            {% if article.image != null %}
                                <img class="card-img-top" src="{{ asset('uploads/images/' ~ article.image ) }}"
                                     alt="{{ article.title }}">
                            {% endif %}

                            <div class="card-body">
                                <h2>{{ article.title }}</h2>
                                <h6 style="font-stretch: ultra-condensed; color: #aaa; padding-bottom: 8px;">
                                    <small>De {{ article.writer }}</small>&nbsp;&nbsp;&nbsp;
                                    <small>le {{ article.createdAt|date("d/m/Y") }} </small>
                                </h6>
                                <p class="card-text">{{ article.content|slice(0, 120) }}</p>
                            </div>
                        </div>
                    </a>

                </div>
            {% endfor %}

        </div>
    </div>

    {% block javascripts %}
        {#Permet l'ajustement des DIV entre elles#}
        {{ encore_entry_script_tags('matchHeight') }}
    {% endblock %}
{% endblock %}

